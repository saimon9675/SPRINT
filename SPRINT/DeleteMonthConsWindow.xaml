<Window x:Class="SPRINT.DeleteMonthConsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SPRINT"
        mc:Ignorable="d"
        Title="Удаление периода" Height="105" Width="200"
        ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="5px"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="1" Text="Период " Margin="5,0,0,0"/>
        <ComboBox Grid.Row="1" Grid.Column="1" Name="PeriodsComboBox" Margin="20,0,5,5"/>
        
        </Grid>
        <Grid Grid.Row="1">
            <Button Name="DeletePeriodButton" Content="Удалить" Margin="0,5,5,0" HorizontalAlignment="Right" Click="DeletePeriodButton_Click"/>
        </Grid>
    </Grid>
</Window>
